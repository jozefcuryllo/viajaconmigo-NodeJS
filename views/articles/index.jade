extends ../layout

block append css
    style(type='text/css').
        /* Global */

        img {
            max-width: 100%;
        }

        a {
            -webkit-transition: all 150ms ease;
            -moz-transition: all 150ms ease;
            -ms-transition: all 150ms ease;
            -o-transition: all 150ms ease;
            transition: all 150ms ease;
        }

        a:hover {
            -ms-filter: "progid:DXImageTransform.Microsoft.Alpha(Opacity=50)"; /* IE 8 */
            filter: alpha(opacity=50); /* IE7 */
            opacity: 0.6;
        text-decoration: none;
        }

        .caption {
            margin-bottom: 10px;
        }

        .thumbnail {
            margin-bottom: 5px;
            border-radius: 0;
        }

        .thumbnails li > .fff .caption {
            background: #fff !important;
            padding: 10px
        }

        /* Page Header */
        .page-header {
            background: #f9f9f9;
            margin: -30px -40px 40px;
            padding: 20px 40px;
            border-top: 4px solid #ccc;
            color: #999;
            text-transform: uppercase;
        }

        .page-header h3 {
            line-height: 0.88rem;
            color: #000;
        }

        ul.thumbnails {
            margin-bottom: 0;
        }

        /* Thumbnail Box */
        .caption h4 {
            color: #444;
        }

        .caption p {
            color: #999;
        }

        /* Mobile Only */
        @media (max-width: 767px) {
            .page-header, .control-box {
                text-align: center;
        }
        }

        @media (max-width: 479px) {
            .caption {
                word-break: break-all;
        }
        }

        li {
            list-style-type: none;
        }

block append content
    .container
        .col-xs-12
            #myCarousel.carousel.slide
                .carousel-inner
                    .item.active
                        ul.thumbnails
                            for article in articles
                                li.col-sm-3
                                    .fff
                                        .thumbnail
                                            a(href='/articles/{article._id}')
                                                img(src='/uploads/#{article.place.images[0].filename}', alt='#{article.place.name}')
                                        .caption
                                            h4 #{article.name}
                                            p #{article.description}
                                            .text-center
                                                a.btn.btn-primary(href='/articles/#{article._id}')
                                                    | Read More
