        block before_content

            #content.container
                if(success_messages && success_messages.length > 0)
                    br
                    .alert.alert-success= success_messages
                if(error_messages && error_messages.length > 0)
                    br
                    .alert.alert-danger= error_messages
                block breadcrumb
                    br
                    ol.breadcrumb
                        - for(var i =0; i<breadcrumb.length; ++i){
                        - if(breadcrumb[i].url)
                            li(itemscope='', itemtype='http://data-vocabulary.org/Breadcrumb')
                                a(href='#{breadcrumb[i].url}', itemprop='url')
                                    span(itemprop='title') #{breadcrumb[i].label}
                        - else
                            li
                                span #{breadcrumb[i].label}
                        - }

