block append after_content
    hr
    .container
        .row
            .col-6.col-sm-6.col-lg-4.hei
                h2
                if lastPlace && lastPlace.name
                        i.fa.fa-music
                        |  Last place
                    p.pgl.text-justify
                        b #{lastPlace.name}
                        br
                        | #{lastPlace.description}

                    p
                        a.btn.btn-default.btn-block(href='/places/show/#{lastPlace.id}', role='button') See more
            .col-6.col-sm-6.col-lg-4.hei
                h2
                if lastArticle && lastArticle.name
                        i.fa.fa-quote-left
                        |  Last article
                    p.pgl.text-justify
                        b #{lastArticle.name}
                        br
                        | #{lastArticle.description}

                    p
                        a.btn.btn-default.btn-block(href='/articles/show/#{lastArticle.id}', role='button') See more
            .col-6.col-sm-6.col-lg-4.hei
